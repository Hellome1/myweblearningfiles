<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <%- include head %>
  </head>
  <body>
    <%- include('bar', { username: username}) %>
    <h3 id="article_head">文章列表</h3>
    <div class="article">
      <div class="head">
        <span>序号</span>
        <span>作者</span>
        <span>文章标题</span>
        <span>时间</span>
        <span class="operate">操作</span>
      </div>
      <% data.list.map(function(item, index){ %>
        <div class="row">
          <span><%= index+1 %></span>
          <span><%= item.username %></span>
          <span><a href="/detail?id=<%= item.id %>"><%= item.title %></a></span>
          <span><%= item.time %></span>
          <span class="operate">
            <a href="/write/?id=<%= item.id %>&page=<%= data.curPage %>">编辑</a>
            <a href="/article/delete?id=<%= item.id %>&page=<%= data.curPage %>">删除</a>
          </span>
        </div>
      <% }) %>

      <div class="pages">
        <% for(let i = 0; i < data.total; i++){ %>
          <a href="/?page=<%= i + 1 %>"><%= i + 1 %></a>
        <% } %>
      </div>
    </div>
  </body>
</html>
